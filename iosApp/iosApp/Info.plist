<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>CFBundleIdentifier</key>
        <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
        <key>CFBundleVersion</key>
        <string>1</string>
        <key>CFBundleExecutable</key>
        <string>$(EXECUTABLE_NAME)</string>
        <key>CFBundleName</key>
        <string>$(PRODUCT_NAME)</string>
        <key>CFBundlePackageType</key>
        <string>APPL</string>
        <key>CFBundleShortVersionString</key>
        <string>1.0</string>
        <key>LSRequiresIPhoneOS</key>
        <true/>

        <!-- Disables the frame rate limit on ProMotion displays (120Hz support) -->
        <key>CADisableMinimumFrameDurationOnPhone</key>
        <true/>

        <!-- Required for PlatformImageSaveService: Saving to Gallery -->
        <key>NSPhotoLibraryAddUsageDescription</key>
        <string>PixelWalls needs permission to save your created 3D wallpapers to your photo library.</string>

        <!-- Required for FileKit: Picking images from Gallery -->
        <key>NSPhotoLibraryUsageDescription</key>
        <string>PixelWalls needs access to your photos so you can select a background to edit and create 3D effects.</string>

        <!-- UI Configuration -->
        <key>UIRequiredDeviceCapabilities</key>
        <array>
            <string>arm64</string>
        </array>
        <key>UISupportedInterfaceOrientations</key>
        <array>
            <string>UIInterfaceOrientationPortrait</string>
        </array>
    </dict>
</plist>
